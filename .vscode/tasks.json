{
    "version": "2.0.0",
    "command": "sh",
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "args": [
                "make -j 8"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            } /*,
            "dependsOn": [
                "cmake"
            ] */
        }
    ]
}